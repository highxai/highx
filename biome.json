{
	"$schema": "https://biomejs.dev/schemas/2.1.0/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useShorthandFunctionType": "warn",
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noConfusingVoidType": "off"
			},
			"nursery": {
				"useExplicitType": "info"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"useEditorconfig": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	},
	"vcs": {
		"enabled": true,
		"useIgnoreFile": true,
		"clientKind": "git"
	}
}
